<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 눌렀을 때 -->
    <item android:state_checked="true">
        <layer-list>
            <item>
                <shape>
                    <!-- 배경 -->
                    <solid android:color="#E7F4DA" />
                    <!-- 모서리 -->
                    <corners android:radius="20dp" />
                    <stroke android:width="1dp" android:color="#B1D88A"/>
                    <padding android:right="15dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/talk"
                android:gravity="center|right"
                android:width="45dp"
                android:height="45dp"/>
        </layer-list>

    </item>

    <item android:state_checked="false">
        <layer-list>
            <item>
                <shape>
                    <!-- 배경 -->
                    <solid android:color="#FFFFFF" />
                    <!-- 모서리 -->
                    <corners android:radius="20dp" />
                    <padding android:right="15dp"/>
                </shape>
            </item>
            <item
                android:drawable="@drawable/talk"
                android:gravity="center|right"
                android:width="45dp"
                android:height="45dp"/>
        </layer-list>
    </item>
</selector>