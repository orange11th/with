<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:id="@+id/back_btn"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"

                tools:ignore="SpeakableTextPresentCheck" />

            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="아직 돌보미가 구해지지 않았아요."
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_margin="4dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_type"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 종류"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#454545"/>

                <Button
                    android:id="@+id/change_btn1"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/type1"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/color_edge"
                    android:gravity="center"
                    android:text="이동 보조"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/type2"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"
                    android:text="산책 동반"
                    android:textSize="22dp"
                    android:textColor="@color/black"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/color_edge"/>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_place"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 장소"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#454545"/>

                <Button
                    android:id="@+id/change_btn2"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/address_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="집 "
                    android:textSize="20dp"
                    android:textColor="@color/black" />



            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_time"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 시간"
                    android:textColor="#454545"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/change_btn3"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="2022년 8월 11일"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="13시 40분"
                    android:textSize="20dp"
                    android:textColor="@color/black" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_how"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="85dp"
                    android:text="돌보미 구인 방법"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#454545"/>

                <Button
                    android:onClick="change4_OnClick"
                    android:id="@+id/change_btn4"
                    android:layout_width="95dp"
                    android:layout_height="45dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/how_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="선착순"
                    android:textSize="20dp"
                    android:textColor="@color/black" />


            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">
            <Button
                android:id="@+id/cancel_btn"
                android:layout_width="100dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#CDCDCD"
                android:text="취소하기"
                android:textStyle="bold"
                android:textSize="18sp"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="250dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#CDCDCD"
                android:text="확 인"
                android:textStyle="bold"
                android:textSize="18sp"
                android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>