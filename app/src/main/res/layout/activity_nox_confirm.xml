<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_simple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:titleTextColor="#000000"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 내용이 맞나요?"
            android:textSize="26dp"
            android:textColor="#111111"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/titleText"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="게시글 제목"
            android:textStyle="bold"
            android:textSize="21dp"
            android:textColor="#111111"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="도움 종류 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/tag"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="병원 동행"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="출발지 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/startAddText"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="출발지 주소"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="목적지 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/endAddText"
                android:layout_width="285dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="세종특별자치시 조치원읍 조치원로 54"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="날짜 및 시간 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/dateText"
                android:layout_width="250dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="2022년 11월 16일 08시 30분"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="구인 방법 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/wayText"
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="빠르게 돌보미 구하기"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/seniorInfo"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:padding="2dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="시니어 정보"
            android:textColor="#111111"
            android:textStyle="bold"
            android:background="@drawable/nox_confirm_background"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="이름 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/nameText"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="ㅇㅇㅇ"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="성별 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/genderText"
                android:layout_width="297dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="여성"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="35dp"
                android:layout_marginLeft="35dp"
                android:text="지병 및 유의사항 "
                android:textColor="#222222"
                android:textStyle="bold"
                android:textSize="15dp"/>

            <TextView
                android:id="@+id/noticeText"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="start"
                android:text="고혈압"
                android:textColor="#333333"
                android:textSize="15dp"/>

        </LinearLayout>


        <TextView
            android:id="@+id/context_text1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:padding="2dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="세부 도움 내용"
            android:textColor="#111111"
            android:textStyle="bold"
            android:background="@drawable/nox_confirm_background"/>

        <TextView
            android:id="@+id/contentText"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="6월 20일 oo병원까지 이동 보조와 동행을 도와주실 분을 구합니다. 어쩌구 해주셔야 하고 저쩌구 이고 주의하셔야 할 점은 어쩌구 저쩌구 웅앵입니다. "
            android:textColor="#333333"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">

            <Button
                android:id="@+id/modifyBtn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/confirm_change_background"
                android:text="수정"
                android:textSize="17dp"
                android:textColor="#222222" />

            <Button
                android:id="@+id/confirmBtn"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:text="확인"
                android:textSize="17dp"
                android:textColor="@color/white"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>