<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="#000000"
            android:background="#FAFAFA"
            android:id="@+id/toolbar_simple"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="다음 내용이 맞나요?"
            android:textSize="26sp"
            android:textColor="#111111"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/title_text"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="6월 20일 병원 동행을 도와줄 돌보미를 구합니다."
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="#111111"/>

        <TextView
            android:id="@+id/location_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="위치: oo시 oo구 oo동"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/when_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="날짜 및 시간: 2022년 6월 20일 14시"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/senior_info"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:padding="2dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="시니어 정보"
            android:textColor="#111111"
            android:textStyle="bold"
            android:background="@drawable/nox_confirm_background"/>

        <TextView
            android:id="@+id/name_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="성함: ooo"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/gender_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="성별: 여성"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/age_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="나이: 70세"
            android:textColor="#222222"/>

        <TextView
            android:id="@+id/notice_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start"
            android:text="지병 및 유의사항: 고혈압, 거동 불편"
            android:textColor="#222222" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="35dp"
            android:layout_marginLeft="35dp"
            android:layout_gravity="start">

            <TextView
                android:id="@+id/tag1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/hashtagbackground"
                android:gravity="center"
                android:text="병원동행" />

            <TextView
                android:id="@+id/tag2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:background="@drawable/hashtagbackground"
                android:gravity="center"
                android:text="이동보조" />

        </LinearLayout>

        <TextView
            android:id="@+id/context_text1"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:layout_marginStart="30dp"
            android:layout_marginLeft="30dp"
            android:padding="2dp"
            android:layout_gravity="start"
            android:gravity="center"
            android:text="세부 도움 내용"
            android:textColor="#111111"
            android:textStyle="bold"
            android:background="@drawable/nox_confirm_background"/>

        <TextView
            android:id="@+id/context_text2"
            android:layout_width="340dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="6월 20일 oo병원까지 이동 보조와 동행을 도와주실 분을 구합니다. 어쩌구 해주셔야 하고 저쩌구 이고 주의하셔야 할 점은 어쩌구 저쩌구 웅앵입니다. "
            android:textColor="#222222"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp">

            <Button
                android:id="@+id/modify_btn"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/confirm_change_background"
                android:text="수정"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#111111"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:text="확인"
                android:textStyle="bold"
                android:textSize="17sp"
                android:textColor="#111111"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>
    </LinearLayout>

</ScrollView>