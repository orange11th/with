<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar_confirm"
            app:titleTextColor="#111111"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints" />

        <TextView
            android:id="@+id/confirm_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:text="신청하신 내용을 확인해주세요."
            android:textSize="26sp"
            android:textStyle="bold"
            android:textColor="@color/black"/>


        <!-- 도움 종류 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_type"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="240dp"
                    android:text="도움 종류"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#75A843"/>

            </LinearLayout>

            <!-- 도움 종류 가로 정렬 -->
            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="25dp">

                <TextView
                    android:id="@+id/needsText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:text="이동 보조"
                    android:textSize="20dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/confirm_btn_background" />

            </LinearLayout>

        </LinearLayout>

        <!-- 도움 장소 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_place"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="240dp"
                    android:text="도움 장소"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#75A843"/>

            </LinearLayout>

            <!-- 출밞지, 목적지 세로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="출발지 "
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/startAddText"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="15dp"
                    android:text="세종특별자치시 조치원읍 돌간길 54 101-101"
                    android:textSize="18dp"
                    android:textColor="#444444"/>

                <TextView
                    android:id="@+id/addressText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="목적지 "
                    android:textSize="19dp"
                    android:textStyle="bold"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/endAddText"
                    android:layout_width="305dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="세종특별자치시 조치원읍 조치원로 54"
                    android:textSize="18dp"
                    android:textColor="#444444"/>


            </LinearLayout>

        </LinearLayout>

        <!-- 도움 시간 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_time"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="240dp"
                    android:text="도움 시간"
                    android:textColor="#75A843"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <!-- 날짜 및 시간 세로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="10dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/dateText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="2022년 11월 25일"
                    android:textSize="20dp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/timeText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="13시 40분"
                    android:textSize="20dp"
                    android:textColor="#222222" />

            </LinearLayout>

        </LinearLayout>

        <!-- 구인 방법 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginBottom="5dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_how"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="175dp"
                    android:text="돌보미 구인 방법"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#75A843"/>

            </LinearLayout>

            <!-- 구인 방법 내용 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/wayText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="빠르게 돌보미 구하기"
                    android:textSize="20dp"
                    android:textColor="#222222" />

            </LinearLayout>

        </LinearLayout>

        <!-- 확인 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <Button
                android:id="@+id/modifyBtn"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/confirm_change_background"
                android:text="수정"
                android:textSize="19sp"
                android:textColor="#111111"
                android:elevation="4dp"/>

            <Button
                android:id="@+id/confirmBtn"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:text="확인"
                android:textSize="19sp"
                android:textColor="@color/white"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>