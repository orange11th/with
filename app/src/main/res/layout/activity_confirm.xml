<?xml version="1.0" encoding="utf-8"?>

<!-- 3-2-1-1. 도움 게시글 내용 확인 (시니어용) -->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- 툴바, 타이틀 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                app:titleTextColor="#111111"
                android:background="@color/white"
                android:id="@+id/toolbar_main3"
                android:layout_height="58dp"
                android:layout_width="match_parent"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="신청하신 내용을 확인해주세요."
                android:textSize="26sp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

        </LinearLayout>

        <!-- 도움 종류 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_type"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 종류"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

                <Button
                    android:id="@+id/change_btn1"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:background="@drawable/confirm_change_background"/>

            </LinearLayout>

            <!-- 도움 종류 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/type1"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginRight="10dp"
                    android:text="이동 보조"
                    android:textSize="20dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/confirm_btn_background" />

                <TextView
                    android:id="@+id/type2"
                    android:layout_width="150dp"
                    android:layout_height="55dp"
                    android:layout_marginLeft="5dp"
                    android:text="산책 동반"
                    android:textSize="20dp"
                    android:textColor="#222222"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:background="@drawable/confirm_btn_background"/>

            </LinearLayout>

        </LinearLayout>

        <!-- 도움 장소 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_place"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 장소"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

                <Button
                    android:id="@+id/change_btn2"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:background="@drawable/confirm_change_background"/>

            </LinearLayout>

            <!-- 출밞지, 목적지 세로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="출발지 "
                    android:textSize="20dp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/dest_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="목적지 "
                    android:textSize="20dp"
                    android:textColor="#222222" />

            </LinearLayout>

        </LinearLayout>

        <!-- 도움 시간 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_time"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 시간"
                    android:textColor="#111111"
                    android:textSize="22sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/change_btn3"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:background="@drawable/confirm_change_background"/>

            </LinearLayout>

            <!-- 날짜 및 시간 세로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="2022년 8월 11일"
                    android:textSize="20dp"
                    android:textColor="#222222" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="13시 40분"
                    android:textSize="20dp"
                    android:textColor="#222222" />

            </LinearLayout>

        </LinearLayout>

        <!-- 구인 방법 레이아웃 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:padding="10dp"
            android:background="@drawable/edge"
            android:elevation="2dp">

            <!-- 타이틀, 변경 버튼 가로 정렬 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/help_how"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="85dp"
                    android:text="돌보미 구인 방법"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="#111111"/>

                <Button
                    android:id="@+id/change_btn4"
                    android:layout_width="90dp"
                    android:layout_height="34dp"
                    android:text="변경하기"
                    android:textSize="16dp"
                    android:textColor="#111111"
                    android:background="@drawable/confirm_change_background"/>

            </LinearLayout>

            <!-- 구인 방법 내용 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/how_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="20dp"
                    android:text="선착순"
                    android:textSize="20dp"
                    android:textColor="#222222" />

            </LinearLayout>

        </LinearLayout>

        <!-- 확인 버튼 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/confirm_btn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="5dp"
                android:text="확인"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="#111111"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>