<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="#000000"
            android:background="#FAFAFA"
            android:id="@+id/toolbar_simple"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:text="어떤 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26dp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:id="@+id/radioGroup1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn1"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="병원 동행"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_hospital"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp" />

                <RadioButton
                    android:id="@+id/radioBtn2"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="이동 보조"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_walk"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp"/>

            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn3"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="가사 돌봄"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_household"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp" />

                <RadioButton
                    android:id="@+id/radioBtn4"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="말동무"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_talk"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp"/>
            </RadioGroup>

            <RadioGroup
                android:id="@+id/radioGroup3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/radioBtn5"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="취미/여가"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_hobby"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp"/>

                <RadioButton
                    android:id="@+id/radioBtn6"
                    android:layout_width="185dp"
                    android:layout_height="100dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="15dp"
                    android:text="기타"
                    android:textColor="#222222"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_etc"
                    android:gravity="center_vertical"
                    android:button="@null"
                    android:elevation="3dp"/>
            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/hobbyLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="원하시는 취미 항목을 적어주세요."
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ectLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">

            <EditText
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="원하시는 항목을 적어주세요."
                android:textSize="20dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="어디에서 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!--출발지,목적지 레이아웃 (병원동행, 이동보조 클릭 시 사용)-->
        <LinearLayout
            android:id="@+id/destLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="출발지"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:id="@+id/radioGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/existingBtn"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="기존 주소"
                        android:textSize="15dp"
                        android:textColor="@drawable/simple_radio_text"
                        android:background="@drawable/simple_radio_btn2"
                        android:gravity="center"
                        android:checked="true"
                        android:button="@null"/>

                    <RadioButton
                        android:id="@+id/newBtn"
                        android:layout_width="88dp"
                        android:layout_height="40dp"
                        android:background="@drawable/simple_radio_btn2"
                        android:button="@null"
                        android:gravity="center"
                        android:text="직접 입력"
                        android:textColor="@drawable/simple_radio_text"
                        android:textSize="15dp" />

                </RadioGroup>

            </LinearLayout>

            <!--클릭한 라디오 버튼에 따라 입력창 다르게 띄우기-->
            <!--기존 주소 레이아웃-->
            <LinearLayout
                android:id="@+id/existingLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:id="@+id/radioGroup4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="세종특별자치시 조치원읍 돌간길 54 101-101"
                        android:textSize="16dp"
                        android:buttonTint="#8FC759" />

                    <View
                        android:layout_width="350dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#DCDCDC"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="세종특별자치시 조치원읍 돌간길 54 102-102"
                        android:textSize="16dp"
                        android:buttonTint="#8FC759"/>

                </RadioGroup>

            </LinearLayout>

            <!--신규 주소(직접 입력) 레이아웃-->
            <LinearLayout
                android:id="@+id/newLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/addressText1"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="주소"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/addressText2"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="상세 주소"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp" />

            </LinearLayout>

            <!--목적지 레이아웃-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/destText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="30dp"
                    android:text="목적지"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <EditText
                        android:id="@+id/addressText3"
                        android:layout_width="250dp"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="4dp"
                        android:hint="오른쪽 검색 버튼을 눌러주세요."
                        android:textColor="#2E2E2E"
                        android:textSize="18dp"
                        android:focusable="false" />

                    <Button
                        android:id="@+id/searchBtn"
                        android:layout_width="55dp"
                        android:layout_height="40dp"
                        android:text="검색"
                        android:textSize="16dp"
                        android:background="@drawable/confirm_change_background"/>

                </LinearLayout>


                <EditText
                    android:id="@+id/addressText4"
                    android:layout_width="310dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="세부 주소를 입력해주세요."
                    android:textColor="#2E2E2E"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <!--장소 레이아웃 (병원동행, 이동보조 제외 클릭 시 사용)-->
        <LinearLayout
            android:id="@+id/locationLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="10dp">

                <TextView
                    android:id="@+id/locationText2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:text="장소"
                    android:textColor="#111111"
                    android:textSize="20dp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30dp"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/existingBtn2"
                        android:layout_width="90dp"
                        android:layout_height="40dp"
                        android:text="기존 주소"
                        android:textSize="15dp"
                        android:textColor="@drawable/simple_radio_text"
                        android:background="@drawable/simple_radio_btn2"
                        android:gravity="center"
                        android:checked="true"
                        android:button="@null"/>

                    <RadioButton
                        android:id="@+id/newBtn2"
                        android:layout_width="88dp"
                        android:layout_height="40dp"
                        android:background="@drawable/simple_radio_btn2"
                        android:button="@null"
                        android:gravity="center"
                        android:text="직접 입력"
                        android:textColor="@drawable/simple_radio_text"
                        android:textSize="15dp" />

                </RadioGroup>

            </LinearLayout>

            <!--클릭한 라디오 버튼에 따라 입력창 다르게 띄우기-->
            <!--기존 주소 레이아웃2-->
            <LinearLayout
                android:id="@+id/existingLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="30dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:text="주소1\n세종특별자치시 조치원읍 어쩌구 저쩌구 101-101"/>

                    <View
                        android:layout_width="350dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"
                        android:background="#DCDCDC"/>

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="15dp"
                        android:text="주소2\n세종특별자치시 조치원읍 어쩌구 저쩌구 102-102"/>

                </RadioGroup>

            </LinearLayout>

            <!--신규 주소(직접 입력) 레이아웃2-->
            <LinearLayout
                android:id="@+id/newLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/addressText5"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:text="주소"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/addressText6"
                    android:layout_width="300dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:hint="상세 주소"
                    android:textColor="#2E2E2E"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="언제 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/dateBtn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="21dp"
                android:padding="10dp"
                android:background="@drawable/date_select"
                android:text="날짜 선택"
                android:gravity="end"
                android:textSize="20dp"
                android:textColor="#131313"/>

            <TextView
                android:id="@+id/dateTextView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="날짜를 선택해주세요."
                android:textSize="20dp"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/hourSpinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/hour_value" />

            <Spinner
                android:id="@+id/minuteSpinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/minute_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="어떻게 돌보미를 구하고 싶으신가요?"
                android:textColor="#111111"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:id="@+id/radioGroup5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/rBtn1"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="#222222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="빠르게 돌보미\n구하기"
                    android:background="@drawable/radiobtn_back"
                    android:elevation="2dp"/>

                <RadioButton
                    android:id="@+id/rBtn2"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:textColor="#222222"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="지원한 돌보미 중 \n선택하기"
                    android:background="@drawable/radiobtn_back"
                    android:elevation="2dp"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/enrollBtn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="등록"
                android:textSize="19dp"
                android:textColor="@color/white"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>