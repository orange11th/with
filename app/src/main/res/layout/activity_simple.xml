<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="#000000"
            android:background="#FAFAFA"
            android:id="@+id/toolbar_simple"
            android:layout_height="58dp"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="어떤 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="모두 선택해주세요."
                android:textColor="#444444"
                android:textSize="22sp"
                android:textStyle="bold"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/checkbox1"
                    android:layout_width="387dp"
                    android:layout_height="138dp"
                    android:layout_margin="5dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:text="병원 동행\n\n병원에 함께 갈 사람을\n찾으신다면 선택해주세요."
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_checkbox_back"
                    android:textAlignment="viewStart"
                    android:gravity="start"
                    android:button="@null"
                    android:elevation="2dp"/>

                <CheckBox
                    android:id="@+id/checkbox2"
                    android:layout_width="387dp"
                    android:layout_height="138dp"
                    android:layout_margin="5dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:text="이동 보조\n\n이동할 때 도와줄 사람을\n찾으신다면 선택해주세요."
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_checkbox_back"
                    android:gravity="start"
                    android:button="@null"
                    android:elevation="2dp"/>

                <CheckBox
                    android:id="@+id/checkbox3"
                    android:layout_width="387dp"
                    android:layout_height="138dp"
                    android:layout_margin="5dp"
                    android:paddingTop="15dp"
                    android:paddingLeft="20dp"
                    android:text="산책 동반\n\n산책할 때 함께 가거나 거동을 도와줄 \n사람을 찾으신다면 선택해주세요."
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_checkbox_back"
                    android:gravity="start"
                    android:button="@null"
                    android:elevation="2dp" />

                <CheckBox
                    android:id="@+id/checkbox4"
                    android:layout_width="387dp"
                    android:layout_height="138dp"
                    android:layout_margin="5dp"
                    android:paddingLeft="20dp"
                    android:paddingTop="15dp"
                    android:text="기타\n\n원하시는 서비스가 없다면 직접 입력해주세요."
                    android:textColor="#555555"
                    android:textSize="18sp"
                    android:bufferType="spannable"
                    android:background="@drawable/simple_checkbox_back"
                    android:gravity="start"
                    android:button="@null"
                    android:elevation="2dp"/>

            </LinearLayout>

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="어디에서 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="출발지"
                android:textColor="#111111"
                android:textSize="20sp"
                android:textStyle="bold" />

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/existingBtn"
                    android:layout_width="90dp"
                    android:layout_height="40dp"
                    android:text="기존 주소"
                    android:textSize="15dp"
                    android:textColor="@drawable/simple_radio_text"
                    android:background="@drawable/simple_radio_btn2"
                    android:gravity="center"
                    android:checked="true"
                    android:button="@null"/>

                <RadioButton
                    android:id="@+id/newBtn"
                    android:layout_width="88dp"
                    android:layout_height="40dp"
                    android:background="@drawable/simple_radio_btn2"
                    android:button="@null"
                    android:gravity="center"
                    android:text="직접 입력"
                    android:textColor="@drawable/simple_radio_text"
                    android:textSize="15dp" />

            </RadioGroup>

        </LinearLayout>

        <!--클릭한 라디오 버튼에 따라 입력창 다르게 띄우는 법-->
        <LinearLayout
            android:id="@+id/existingLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="30dp">

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10dp"
                    android:text="주소1\n세종특별자치시 조치원읍 어쩌구 저쩌구 101-101"/>

                <View
                    android:layout_width="350dp"
                    android:layout_height="1dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="#DCDCDC"/>

                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="15dp"
                    android:text="주소2\n세종특별자치시 조치원읍 어쩌구 저쩌구 102-102"/>

            </RadioGroup>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="30dp"
                android:text="목적지"
                android:textColor="#111111"
                android:textSize="20sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="주소 검색 기능 추가"
                android:textColor="#2E2E2E"
                android:textSize="18sp" />

            <EditText
                android:id="@+id/address_edit2"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:text="주소 검색 기능 추가"
                android:textColor="#2E2E2E"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/newLayout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="신규 주소지 레이아웃"
                android:textSize="30dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="언제 도움이 필요하신가요?"
                android:textColor="#111111"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/date_btn"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="21dp"
                android:padding="10dp"
                android:background="@drawable/date_select"
                android:text="날짜 선택"
                android:gravity="end"
                android:textSize="20dp"
                android:textColor="#131313"/>

            <TextView
                android:id="@+id/date_textView"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:hint="날짜를 선택해주세요."
                android:textSize="20dp"
                android:textColor="#222222"
                android:gravity="center"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/hour_spinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/hour_value" />

            <Spinner
                android:id="@+id/minute_spinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="2dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/minute_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#888888" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:text="어떻게 돌보미를 구하고 싶으신가요?"
                android:textColor="#111111"
                android:textSize="25sp"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/r_btn1"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="선착순"
                    android:background="@drawable/radiobtn_back"
                    android:elevation="2dp"/>

                <RadioButton
                    android:id="@+id/r_btn2"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:textColor="#111111"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="지원한 돌보미 중 \n선택"
                    android:background="@drawable/radiobtn_back"
                    android:elevation="2dp"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/enrollBtn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:text="등록"
                android:textStyle="bold"
                android:textSize="18sp"
                android:outlineProvider="none"
                android:background="@drawable/color_edge"/>

        </LinearLayout>

    </LinearLayout>

</ScrollView>