<?xml version="1.0" encoding="utf-8"?>

<!--설명 : 이 화면은 돌보미가 개인정보 설정을 하는 화면입니다.-->

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--뒤로가기. 프로필, 수정 버튼, 설정 버튼-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">
        <!--뒤로가기 버튼-->
        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center"
            android:src="@drawable/back_icon"/>

        <!--텍스트-->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:text="개인정보 설정"/>

        <!--저장 버튼-->
        <Button
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_marginLeft="170dp"
            android:textColor="@color/white"
            android:text="저장"/>


    </LinearLayout>

    <!--아이디-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="아이디"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textStyle="bold"
            android:textSize="17sp"
            android:text="Abcd"/>

    </LinearLayout>

    <!--비밀번호-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="비밀번호"/>
        <TextView
            android:id="@+id/textview_id1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edittext_input1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="비밀번호 "/>

        <!--id를 부여해서 비밀번호 변경 버튼을 핸들링한다.-->
        <!--onClick으로 btn_Click이 실행된다.-->
        <TextView
            android:onClick="btn_Click"
            android:id="@+id/btn1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="비밀번호 변경"/>
    </LinearLayout>

    <!--휴대전화-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="전화번호"/>
        <TextView
            android:id="@+id/textview_id2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edittext_input2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="010-0000-0000 "/>

        <!--id를 부여해서 비밀번호 변경 버튼을 핸들링한다.-->
        <!--onClick으로 btn_Click이 실행된다.-->
        <TextView
            android:onClick="btn_Click"
            android:id="@+id/btn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="전화번호 변경"/>
    </LinearLayout>

    <!--아메일-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="이메일"/>
        <TextView
            android:id="@+id/textview_id3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:textSize="17sp"
            android:textStyle="bold"/>
        <EditText
            android:id="@+id/edittext_input3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Abcd@gmail.com "/>

        <!--id를 부여해서 비밀번호 변경 버튼을 핸들링한다.-->
        <!--onClick으로 btn_Click이 실행된다.-->
        <TextView
            android:onClick="btn_Click"
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:text="이메일 변경"/>
    </LinearLayout>



</LinearLayout>