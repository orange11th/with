<?xml version="1.0" encoding="utf-8"?>

<!--설명 : 이 화면은 시니어가 올린 글을 확인하는 화면입니다.-->

<!--스크롤뷰-->
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:orientation="vertical"
    tools:context=".SeniorCheck1Activity">
    <!--레이아웃 세로 -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--툴바, 도움 내용(TextView)-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--toolbar : id 지정해줘야함-->
            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar_senior2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#FFFFFF"
                app:titleTextColor="#000000"
                tools:ignore="MissingConstraints" />

            <TextView
                android:id="@+id/confirm_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:text="도움 내용"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold" />

        </LinearLayout>

        <!--도움 종류, 이동 보조, 산책 동반-->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/edge"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/help_type"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 종류"
                    android:textColor="#454545"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"

                android:gravity="center">

                <TextView
                    android:id="@+id/type1"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginRight="5dp"
                    android:background="@drawable/color_edge"
                    android:gravity="center"
                    android:text="이동 보조"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/type2"
                    android:layout_width="160dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="5dp"

                    android:background="@drawable/color_edge"
                    android:gravity="center"
                    android:text="산책 동반"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

            </LinearLayout>


        </LinearLayout>

        <!--도움 장소, 장소 데이터 -->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/help_place"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 장소"
                    android:textColor="#454545"
                    android:textSize="22sp"
                    android:textStyle="bold" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/start_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="집 "
                    android:textColor="@color/black"
                    android:textSize="20dp" />
            </LinearLayout>
        </LinearLayout>

        <!--도움 시간, 날짜시간 데이터-->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/help_time"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="150dp"
                    android:text="도움 시간"
                    android:textColor="#454545"
                    android:textSize="22sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="2022년 8월 11일"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <TextView
                    android:id="@+id/time_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="13시 40분"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

            </LinearLayout>
        </LinearLayout>

        <!--돌보미 구인 방법, 구인 방법 데이터-->
        <LinearLayout
            android:layout_width="380dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/edge"
            android:elevation="4dp"
            android:orientation="vertical"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/help_how"
                    android:layout_width="155dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="85dp"
                    android:text="돌보미 구인 방법"
                    android:textColor="#454545"
                    android:textSize="22sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/how_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginBottom="5dp"
                    android:text="선착순"
                    android:textColor="@color/black"
                    android:textSize="20dp" />


            </LinearLayout>
        </LinearLayout>

        <!--간격 띄우기-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:weightSum="6"></LinearLayout>

        <!--돌보미를 골라주세요!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:gravity="center"
                android:text="돌보미를 골라주세요!"
                android:textSize="25sp"
                android:textStyle="bold" />
        </LinearLayout>

        <!--커스텀 리스트뷰 : 데이터를 받아와서 돌보미를 추가해야함-->
        <!--test-->


        <!--리사이클러뷰-->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv"
            android:scrollbarSize="5dp"
            android:scrollbars="vertical"

            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </androidx.recyclerview.widget.RecyclerView>





        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="30dp"
                android:text="확인" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
