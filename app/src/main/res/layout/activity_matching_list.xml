<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MatchingList">
    <androidx.appcompat.widget.Toolbar
        app:titleTextColor="#000000"
        android:background="#FFFFFF"
        android:id="@+id/toolbar_matchL"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        tools:ignore="MissingConstraints"
        />

    <TextView
        android:id="@+id/helpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="80dp"
        android:text="7월 20일"
        android:textSize="14dp"
        android:textColor="#6d6d6d"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/matchlistbutton1"
        android:layout_width="380dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:text="ooo님\nㅇㅇ시 ㅇㅇ구 ㅇㅇ동\n오후 2시"
        android:bufferType="spannable"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle = "bold"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpdate"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        />

    <TextView
        android:id="@+id/helpdate2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="16dp"
        android:text="7월 15일"
        android:textSize="14dp"
        android:textColor="#6d6d6d"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/matchlistbutton1" />

    <Button
        android:layout_width="380dp"
        android:layout_height="112dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:paddingTop="20dp"
        android:paddingLeft="20dp"
        android:gravity="left"
        android:text="ooo님\nㅇㅇ시 ㅇㅇ구 ㅇㅇ동\n오후 2시"
        android:bufferType="spannable"
        android:textSize="16dp"
        android:textColor="#000000"
        android:textStyle = "bold"
        app:backgroundTint="#FFFFFF"
        app:iconTint="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/helpdate2"
        app:strokeColor="#000000"
        app:strokeWidth="1dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>