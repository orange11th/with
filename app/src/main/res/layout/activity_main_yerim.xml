<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:overScrollMode="never"
    android:scrollbars="none"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            app:titleTextColor="#000000"
            android:background="#d9d9d9"
            android:id="@+id/toolbar_main3"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            tools:ignore="MissingConstraints"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">


            <TextView
                android:id="@+id/textView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:text="어떤 도움이 필요하신가요?"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="모두 선택해주세요."
                android:textColor="#393939"
                android:textSize="22sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/button1"
                android:layout_width="387dp"
                android:layout_height="138dp"
                android:layout_margin="5dp"
                android:paddingLeft="20dp"
                android:text="병원 동행\n\n병원에 함께 갈 사람을 찾으신다면 선택해주세요."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:bufferType="spannable"
                android:background="@drawable/button_border"
                android:gravity="start" />

            <Button
                android:id="@+id/button2"
                android:layout_width="387dp"
                android:layout_height="138dp"
                android:layout_margin="5dp"
                android:paddingLeft="20dp"
                android:text="이동 보조\n\n이동할 때 도와줄 사람을 찾으신다면 선택해주세요."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:bufferType="spannable"
                android:background="@drawable/button_border"
                android:gravity="start" />

            <Button
                android:id="@+id/button3"
                android:layout_width="387dp"
                android:layout_height="138dp"
                android:layout_margin="5dp"
                android:paddingLeft="20dp"
                android:text="산책 동반\n\n산책할 때 함께 가거나 거동을 도와줄 사람을 \n찾으신다면 선택해주세요."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="start"
                android:bufferType="spannable"
                android:background="@drawable/button_border"
                />

            <Button
                android:id="@+id/button4"
                android:layout_width="387dp"
                android:layout_height="138dp"
                android:layout_margin="5dp"
                android:paddingLeft="20dp"
                android:text="기타\n\n원하시는 서비스가 없다면 직접 입력해주세요."
                android:textColor="#000000"
                android:textSize="30sp"
                android:textStyle="bold"
                android:gravity="start"
                android:bufferType="spannable"
                android:background="@drawable/button_border" />

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#8C8C8C" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:text="어디에서 도움이 필요하신가요?"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="출발지"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.110000014" />

            <Spinner
                android:id="@+id/start_spinner"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/start_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="목적지"
                android:textColor="#000000"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.110000014" />


            <TextView
                android:id="@+id/textView6"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:text="주소 검색 기능"
                android:elevation="5dp"
                android:textColor="#2E2E2E"
                android:textSize="18sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#8C8C8C" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="언제 도움이 필요하신가요?"
                android:textColor="#000000"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.110000014" />

            <Button
                android:id="@+id/button6"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/date_select"
                android:text="날짜 선택"
                android:gravity="end"
                android:textSize="20dp"
                android:textColor="#131313"/>

            <CalendarView
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Spinner
                android:id="@+id/hour_spinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/hour_value" />

            <Spinner
                android:id="@+id/minute_spinner"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:layout_margin="5dp"
                android:elevation="5dp"
                android:background="@drawable/spinner_back"
                android:entries="@array/minute_value" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <View
                android:layout_width="330dp"
                android:layout_height="1.5dp"
                android:layout_margin="30dp"
                android:background="#8C8C8C" />

            <TextView
                android:id="@+id/textView8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="어떻게 돌보미를 구하고 싶으신가요?"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.110000014" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/r_btn1"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:gravity="center"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:text="선착순"
                    android:background="@drawable/radio_btn"
                    android:elevation="3dp"/>

                <RadioButton
                    android:id="@+id/r_btn2"
                    android:layout_width="180dp"
                    android:layout_height="83dp"
                    android:layout_margin="5dp"
                    android:button="@null"
                    android:textColor="#000000"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:text="지원한 돌보미 중 \n선택"
                    android:background="@drawable/radio_btn"
                    android:elevation="3dp"/>

            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp"
            android:gravity="center">

            <Button
                android:id="@+id/enroll_btn"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_margin="5dp"
                android:backgroundTint="#CDCDCD"
                android:text="등 록"
                android:textStyle="bold"
                android:textSize="18sp"
                android:elevation="4dp"/>

        </LinearLayout>

    </LinearLayout>



</ScrollView>